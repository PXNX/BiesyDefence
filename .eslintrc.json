{
  "root": true,
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "ignorePatterns": [
    "dist",
    "dist-ssr",
    "*.js"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-debugger": "error",
    "no-alert": "error",
    "prefer-const": "error",
    "no-var": "error",
    "no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "none",
        "ignoreRestSiblings": true
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/__tests__/**", "**/*.test.ts", "**/*.test.tsx"],
      "env": {
        "jest": true
      }
    },
    {
      "files": [
        "src/demo/**/*.ts",
        "src/game/**/*.ts",
        "src/localization/**/*.ts",
        "src/ui/components/**/*.{ts,tsx}"
      ],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
